    android:stretchColumns="1,3"
    
    android:background="#DEDCD2">
    <TableRow 
        android:background="#DEDCD2"
        android:layout_margin="0.5dip">
        <TextView
            android:text="#"
        	android:textSize="10dip"
        	android:textStyle="bold" 
        	 />
        <TextView
            android:text="WorkList       "
        	android:textSize="10dip"
        	android:textStyle="bold" 
             />
         <TextView
            android:text="State"
        	android:textSize="10dip"
        	android:textStyle="bold"
        	 />
         <TextView
            android:text="Note        "
        	android:textSize="10dip"
        	android:textStyle="bold"
      	     />
 
        
        
        
        
        
        </TableRow>
    
    
    
    
    
</TableLayout>

</ScrollView>

